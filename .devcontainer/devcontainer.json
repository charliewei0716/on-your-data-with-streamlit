{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
	"forwardPorts": [
		8501
	],
	"postCreateCommand": "pip3 install -r requirements.txt",
	"postAttachCommand": "streamlit run app.py",
	"portsAttributes": {
		"8501": {
			"label": "Application",
			"onAutoForward": "openPreview"
		}
	},
	"customizations": {
		"codespaces": {
      		"openFiles": [
        		"README.md",
        		"app.py"
			]
		},
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	}
}
